<%- include('./../partials/header'); %>

<div class="container">
    <h1>
        <%= pageTitle %>
    </h1>

    <form action="/products/<%= itemID %>?_method=PATCH" method="POST">
        <div class="form-group">
            <label for="product-name">Name</label>
            <input type="text" class="form-control" name="product_name" id="product-name" value="<%= item.name %>">
        </div>

        <div class="form-group">
            <label for="price">Price</label>
            <input type="text" class="form-control" name="price" id="price" value="<%= item.price %>">
        </div>

        <div class="form-group">
            <label for="img-url">Image URL</label>
            <input type="url" class="form-control" name="img_url" id="img-url" value="<%= item.image %>">
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>


<%- include('./../partials/footer'); %>